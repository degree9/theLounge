(ns lounge.drawer
  (:require [lounge.drawer.auth :as auth]
            [silicone.paper :as paper]))

(defn drawer []
  (paper/paper-header-panel
   (paper/paper-toolbar)
   (div
    {:style "padding: 24px;"}
    (auth/authform))))

(defelem drawer-toggle [attr & kids]
  (let [attr (merge {:icon "menu"
                     :paper-drawer-toggle ""} attr)]
    (paper/paper-icon-button attr)))
